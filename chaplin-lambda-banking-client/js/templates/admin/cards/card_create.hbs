<section class="content well">
    <h1>New card</h1>
    <dl class="data-fields clearfix">
        <dt>Holder</dt>
        <dd><input type="text" placeholder="username" value="{{this.holder.firstName}} {{this.holder.lastName}}" disabled></dd>
        <dt>Exp. date</dt>
        <dd><input type="text" value="13.07.1990" class="datepicker"></dd>
        <dt class="card-new-type">Account type</dt>
        <dd>
            <ul class="type">
                <li>
                    <input type="radio" name="type_radio" id="type_existing" checked="">
                    <label for="type_existing">Existing account</label>
                </li>
                <li>
                    <input type="radio" name="type_radio" id="type_single">
                    <label for="type_single">New, single currency</label>
                </li>
                <li>
                    <input type="radio" name="type_radio" id="type_multi">
                    <label for="type_multi">New, multi currencies</label>
                </li>
            </ul>
        </dd>
        <dt class="card-new-account">Account</dt>
        <dd>
            <select name="" id="">
                <option value="">131231</option>
                <option value="">131232</option>
                <option value="">131233</option>
            </select>
        </dd>
        <dt class="card-new-currency">Currency</dt>
        <dd>
            <select name="" id="">
                <option value="">USD</option>
                <option value="">CAD</option>
                <option value="">JPY</option>
                <option value="">AUD</option>
                <option value="">BYR</option>
            </select>
            <button class="add" title="Add"><i class="icon-plus-sign"></i></button>
        </dd>
    </dl>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary save">Save changes</button>
        <button type="button" class="btn cancel">Cancel</button>
    </div>
</section>
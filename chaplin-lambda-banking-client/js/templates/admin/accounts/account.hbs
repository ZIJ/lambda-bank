<section class="content well">
    <h1>Account #{{this.number}}</h1>
    <dl class="data-fields clearfix">
        <dt>Amount</dt>
        <dd>{{this.amount}}</dd>
        <dt>Currency</dt>
        <dd>{{this.currency}}</dd>
        <dt>Description</dt>
        <dd>{{this.description}}</dd>
    </dl>
    <h2>Operate</h2>
    <form action="">
        <dl class="data-fields clearfix">
            <dt>Amount</dt>
            <dd><input type="text" pattern="^[0-9]*[,.]?[0-9]+$" placeholder="floating point allowed" required title="Alowed: Digits, point or comma. Range: 1â€”10 000 000"></dd>
        </dl>
        <input type="hidden" id="submitter">
        <button type="submit" class="btn btn-warning replenish"><i class="icon-plus-sign icon-white"></i> Replenish</button>
        <button type="submit" class="btn btn-warning withdraw"><i class="icon-minus-sign icon-white"></i> Withdraw</button>
    </form>
</section>
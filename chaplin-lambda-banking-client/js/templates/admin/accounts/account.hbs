<section class="content well">
    <h1>Account #{{this.number}}
    	<button class="btn btn-warning recharge"><i class="icon-plus-sign icon-white"></i> Recharge</button>
    	<button class="btn btn-danger delete"><i class="icon-trash icon-white"></i> Delete</button>
    </h1>
    <dl class="data-fields clearfix">
        <dt>Amount</dt>
        <dd>{{this.amount}}</dd>
        <dt>Currency</dt>
        <dd>{{this.currency}}</dd>
    </dl>
</section>